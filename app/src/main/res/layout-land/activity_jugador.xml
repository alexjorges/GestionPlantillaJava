            android:paddingLeft="20dp"
            android:text="Peso" />

        <TextView
            android:id="@+id/tvDeHabitualJ"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="2dp"
