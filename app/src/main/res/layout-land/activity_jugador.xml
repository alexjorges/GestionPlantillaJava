            android:ems="10"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:text="Altura" />

        <TextView
            android:id="@+id/tvPesoJ"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
